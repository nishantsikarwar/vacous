<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateStart"
        android:textSize="13sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginStart="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:textSize="17sp"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@id/dateStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/iconHeader"
        android:layout_toStartOf="@+id/iconHeader"
        android:paddingBottom="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="52sp"
        android:id="@+id/iconHeader"
        android:layout_marginRight="17sp"
        android:layout_marginEnd="17sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>